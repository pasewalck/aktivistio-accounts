<div class="wrapper flex-container flex-container-vertical">
    <div class="container-medium-width container-filled-background">

        <h1><%= __('page.account_recovery.title') %></h1>

        <form class="form" autocomplete="off" action="<%= urlUtils.extendUrl(baseUrl,`account-recovery`,`reset`,actionToken).href %>" method="post">

        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <fieldset>

            <%- include("../../../partials/alert-info.ejs",{info: __("page.account_recovery.warning_message"),moreInfoLink: false}) %>

            <div class="form-group">
                <label class="label"><%= __('account_recovery.new_password') %></label>
                <%- include("../../../partials/form/input-field.ejs",{field: {name:"password",type:"password",required:true}}) %>
            </div>

            <div class="form-group">
                <label class="label"><%= __('account_recovery.confirm_new_password') %></label>
                <%- include("../../../partials/form/input-field.ejs",{field: {name:"confirmPassword",type:"password",required:true}}) %>
            </div>

        </fieldset>

        <div class="form-action-group">
            <div class="button-group-row">
            <button type="submit" class="button primary"><%= __('common.confirm') %></button>
            </div>
        </div>

        </form>

    </div>
</div>