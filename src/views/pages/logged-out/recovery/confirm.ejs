<div class="wrapper flex-container flex-container-vertical">
    <div class="container-medium-width container-filled-background">
        
        <h1><%= __('Account Recovery') %></h1>
        <p><%= __("We sent you a confirmation code to your provided email") %> </p>

        <form class="form" autocomplete="off" action="<% baseUrl %>/account-recovery/confirm/" method="post">
        
        <input type="hidden" value="<%= csrfToken %>" name="_csrf">
        <fieldset>

            <div class="form-group">
                <label class="label"><%= __('Confirmation code') %></label>
                <%- include("../../../partials/form/input-field.ejs",{field: {name:"confirmCode",type:"text",required:true}}) %> 
            </div>
            
        </fieldset>

        <div class="form-action-group">
            <div class="button-group">
            <button type="submit" class="button primary"><%= __('Confirm') %></button>
            </div>
        </div>

        </form>

    </div>
</div>