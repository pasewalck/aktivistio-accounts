<%- include("../../../partials/dashboard-header.ejs") %>

<div class="wrapper flex-container">
    <div class="container container-medium-width container-filled-background">

        <% if (hasRecoveryEmail) { %>
            <h2><%= __("account.recovery.email.update.title") %></h2>
        <% } else { %>
            <h2><%= __("account.recovery.email.add.title") %></h2>
        <% } %>

        <form class="form" autocomplete="off" action="" method="post">
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
      
            <fieldset>       
              
                <%- include("../../../partials/alert-info.ejs",{info: __("account.recovery.email.setup.warning"),moreInfoLink: "https"}) %> 
                
                <div class="form-group">
                    <label class="label"><%= __('account.password.current.label') %></label>
                    <%- include("../../../partials/form/input-field.ejs",{field: {name:"currentPassword",type:"password",required:true}}) %> 
                </div>

                <div class="form-group">
                    <label class="label"><%= __('account.recovery.email.new.label') %></label>
                    <%- include("../../../partials/form/input-field.ejs",{field: {name:"email",type:"email",required:true}}) %> 
                </div>

            </fieldset>
            
            <div class="form-action-group">
              <div class="button-group">
                <button type="submit" class="button primary"><%= __('account.recovery.email.set.button') %></button>
              </div>
            </div>

        </form>
        
    </div>
</div>
