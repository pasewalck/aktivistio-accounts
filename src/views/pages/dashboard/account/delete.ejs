<%- include("../../../partials/dashboard-header.ejs") %>

<div class="wrapper flex-container">
    <div class="container container-medium-width container-filled-background">
        <h2><%= __("account.delete.title") %></h2>

        <form class="form" action="" method="post">
            <fieldset>
                <%- include("../../../partials/alert-info.ejs",{info: __("account.delete.warning"),moreInfoLink:false}) %> 

                <div class="form-group">
                    <label class="label"><%= __('account.password.label') %></label>
                    <%- include("../../../partials/form/input-field.ejs",{field: {name:"password",type:"password",required:true}}) %> 
                </div>

                <div class="form-group">
                    <label class="label"><%= __('account.confirm.label') %></label>
                    <%- include("../../../partials/form/input-checkbox.ejs",{checkbox: {name:"confirm",msg:__('account.confirm.delete.message')}}) %>             
                </div>
            </fieldset>

            <input type="hidden" value="<%= csrfToken %>" name="_csrf">
            <div class="form-action-group">
                <button class="button red" type="submit"><%= __("account.delete.button") %></button>
            </div>     
        </form>
    </div>
</div>
