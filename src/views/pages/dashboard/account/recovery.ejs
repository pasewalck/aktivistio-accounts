<%- include("../../../partials/dashboard-header.ejs") %>

<div class="wrapper flex-container">
    <div class="container container-medium-width container-filled-background">

        <h2><%= __("page.account_recovery.title") %></h2>

        <% if (currentRecovery && (currentRecovery.recovery_token || currentRecovery.recovery_email)) { %>
            <p><%= __("page.account_recovery.text.recovery-methods-count %s", (currentRecovery.recovery_token && currentRecovery.recovery_email) ? 2 : 1) %></p>
            <ul class="box-list">
                <% if (currentRecovery.recovery_token) { %>
                    <li>
                        <p><%= __("page.account_recovery.active-list.label.token") %></p>
                        <div class="actions">
                            <a href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/set-token').href %>"><%= __("common.button.modify") %></a>
                            <a href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/delete-token').href %>" class="red"><%= __("common.button.delete") %></a>
                        </div>
                    </li>
                <% } %>
                <% if (currentRecovery.recovery_email) { %>
                    <li>
                        <p><%= __("page.account_recovery.active-list.label.email") %></p>
                        <div class="actions">
                            <a href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/set-email').href %>"><%= __("common.button.modify") %></a>
                            <a href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/delete-email').href %>" class="red"><%= __("common.button.delete") %></a>
                        </div>
                    </li>
                <% } %>
            </ul>
        <% } else { %>
            <p><%= __("page.account_recovery.no_method_set_message") %></p>
        <% } %>
        <div class="button-group-row">
            <% if (!currentRecovery?.email) { %>
                <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/set-email').href %>"><%= __("page.account_recovery.add_email_button") %></a>
            <% } %>
            <% if (!currentRecovery?.token) { %>
                <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery/set-token').href %>"><%= __("page.account_recovery.add_token_button") %></a>
            <% } %>
        </div>

    </div>
</div>