        </div>
    </div>

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("page.own_account.menu.recovery.title") %></h2>
        <div class="button-group-column">
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery').href %>"><%= __("page.own_account.menu.recovery-manage") %></a>
        </div>
    </div>

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("page.own_account.menu.deletion.title") %></h2>
        <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/delete/').href %>"><%= __("page.own_account.menu.deletion.proceed") %></a>
    </div>

</div>
