<%- include("../../partials/dashboard-header.ejs") %>

<div class="wrapper flex-container">

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("page.own_account.menu.security-and-access.title") %></h2>
        <div class="button-group-column">
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/password/').href %>"><%= __("page.own_account.menu.security-and-access.password-change") %></a>
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/2fa').href %>"><%= __("page.own_account.menu.security-and-access.mfa-manage") %></a>
