<%- include("../../partials/dashboard-header.ejs") %>

<div class="wrapper flex-container">

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("security.access.title") %></h2>
        <div class="button-group">
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/password/').href %>"><%= __("security.password.change") %></a>
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/2fa').href %>"><%= __("security.mfa.manage") %></a>
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/audit-log').href %>"><%= __("security.audit.view") %></a>
        </div>
    </div>

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("account.recovery.title") %></h2>
        <div class="button-group">
            <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/recovery').href %>"><%= __("account.recovery.manage") %></a>
        </div>
    </div>

    <div class="container container-medium-width container-filled-background">
        <h2><%= __("account.deletion.title") %></h2>
        <a class="button" href="<%= urlUtils.extendUrl(baseUrl, 'account/delete/').href %>"><%= __("account.deletion.proceed") %></a>
    </div>

</div>
