<div class="wrapper flex-container flex-container-vertical">
    <div class="container-medium-width container-filled-background">

        <h1><%= __("logout.title") %></h1>
        <p><%= __("logout.confirm_message") %></p>

        <form class="form" autocomplete="off" action="<%= urlUtils.extendUrl(baseUrl, 'oidc/session/end/confirm/').href %>" method="post">
        
            <input type="hidden" name="xsrf" value="<%= secret %>"/>
            <input type="hidden" value="<%= csrfToken %>" name="_csrf">

            <div class="form-action-group">
                <div class="button-group-row">
                    <button autofocus type="submit" value="yes" name="logout" class="button primary"><%= __('logout.yes') %></button>
                    <button type="submit" class="button red"><%= __('logout.no') %></button>
                </div>
            </div>

        </form>

    </div>
</div>
